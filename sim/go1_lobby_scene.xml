<mujoco model="go1-lobby">

  <compiler angle="degree"/>

  <option timestep="0.002" gravity="0 0 -9.81"/>

  <include file="unitree_go1/go1.xml"/>

  <asset>
    <texture name="sky" type="skybox" builtin="gradient"
             rgb1="0.45 0.55 0.75" rgb2="0.08 0.10 0.18"
             width="512" height="512"/>

    <texture name="tex_floor" type="2d" builtin="checker"
             width="512" height="512"
             rgb1="0.2 0.3 0.4" rgb2="0.1 0.15 0.2"
             mark="cross" markrgb="0.8 0.8 0.8"/>
    <material name="mat_floor" texture="tex_floor" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light name="sun" pos="0 0 5" dir="0 0 -1" directional="true"
           diffuse="1 1 1" specular="0.1 0.1 0.1"/>

    <geom name="floor" type="plane" size="6 6 0.1"
          rgba="0.4 0.4 0.45 1"
          material="mat_floor"/>

    <geom name="wall_back" type="box" pos="0 5 1" size="6 0.1 1"
          rgba="0.9 0.9 0.9 1"/>
    <geom name="wall_left" type="box" pos="-6 0 1" size="0.1 6 1"
          rgba="0.9 0.9 0.9 1"/>
    <geom name="wall_right" type="box" pos="6 0 1" size="0.1 6 1"
          rgba="0.9 0.9 0.9 1"/>

    <body name="person1" pos="4 0 0">
      <joint name="person1_slide" type="slide"
             axis="-1 0 0" limited="true" range="-6 6"/>
      <geom name="person1_geom" type="capsule"
            fromto="0 0 0 0 0 1.7" size="0.25"
            rgba="1 0.6 0.6 1"/>
    </body>

    <camera name="follow" mode="trackcom" target="trunk"
         pos="0 -3 0.8" euler="20 0 0"/>
  </worldbody>
</mujoco>
